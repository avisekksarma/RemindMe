{
    "manifest_version": 2,
    "name": "task-remainder",
    "version": "1.0",
    "description": "An extension to remind task in the set time",
    "icons": {
        "48":"icons/48-bell.png"

    },
    "permissions": [
        "alarms",
        "activeTab",
        "storage",
        "unlimitedStorage",
        "notifications"
    ],
    "browser_action": {
        "default_icon": "icons/48-bell.png",
        "default_title": "RemindMe",
        "default_popup": "popup/task_remainder.html"
    },
    "background": {
        "scripts": [
            "bg-script.js"
        ],
        "persistent": false
    }
}